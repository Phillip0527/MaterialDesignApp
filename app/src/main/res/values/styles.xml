<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 主题颜色颜色 -->
        <item name="colorPrimary">@color/colorPrimary_green</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark_green</item>
        <!-- 控件颜色 -->
        <item name="colorAccent">@color/colorAccent_green</item>
        <!--状态栏透明-->
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <!-- 返回键样式 -->
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
    </style>
    <!--导航栏按钮样式（返回键样式）-->
    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <!--NavigationView样式-->
    <style name="NavigationViewStyle" >
        <item name="android:actionMenuTextColor">@color/colorPrimaryDark</item>
    </style>

    <!--tab点击样式-->
    <style name="TabLayoutClickStyle">
        <!--点击高亮时颜色-->
        <item name="android:colorControlHighlight">@color/colorAccent_yelloe</item>
        <!--正常时颜色-->
        <item name="android:colorControlNormal">@color/colorPrimary_green</item>
    </style>

    <!--tab文字样式-->
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/tab_text_size</item>
    </style>

</resources>
