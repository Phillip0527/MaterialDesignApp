<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_green</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_green</item>
        <item name="colorAccent">@color/colorAccent_green</item>
    </style>

    <style name="TabLayoutClickStyle">
        <item name="android:colorControlHighlight">@color/colorAccent_yelloe</item>
        <item name="android:colorControlNormal">@color/colorPrimary_green</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/tab_text_size</item>
    </style>

</resources>
